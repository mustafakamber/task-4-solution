<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Task4Solution" parent="Theme.Material3.DayNight.NoActionBar">
        <!--  Text Color. -->
        <item name="android:textColor">@color/purple</item>
        <item name="android:textColorPrimary">@color/purple</item>
        <item name="android:textColorHint">@color/purple</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/pink</item>
        <!-- Secondary brand colors. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/dark_purple</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_purple</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color.-->
        <item name="android:navigationBarColor">@color/dark_purple</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:colorControlActivated">@color/purple</item>
        <item name="android:colorBackground">@color/dark_purple</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="movieTextLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="movieTextMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="movieTextSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="Theme.Task4Solution" parent="Base.Theme.Task4Solution" />
</resources>